<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Monthly Payment Status">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <TableView fx:id="paymentsTable" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="memberNameColumn" prefWidth="200.0" text="Member Name" />
                <TableColumn fx:id="totalDueColumn" prefWidth="150.0" text="Total Due" />
                <TableColumn fx:id="paidColumn" prefWidth="150.0" text="Amount Paid" />
                <TableColumn fx:id="balanceColumn" prefWidth="150.0" text="Remaining Balance" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
