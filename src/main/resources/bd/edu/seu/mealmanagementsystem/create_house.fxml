<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.mealmanagementsystem.controller.CreateHouseController">
    <children>
        <ImageView fx:id="regbackgroundImage" fitHeight="704.0" fitWidth="1020.0" layoutY="-7.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../Images/back.jpg" />
            </image>
        </ImageView>
        <TextField fx:id="houseNameField" layoutX="100.0" layoutY="153.0" promptText="House Name" />

        <Label layoutX="102.0" layoutY="199.0" text="Select Gender:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>



        <Button layoutX="140.0" layoutY="309.0" onAction="#handleCreateHouse" text="Next">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      <RadioButton layoutX="100.0" layoutY="235.0" mnemonicParsing="false" text="Male">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="genderToggleGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton layoutX="203.0" layoutY="235.0" mnemonicParsing="false" text="Female" toggleGroup="$genderToggleGroup">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></RadioButton>
      <Label layoutX="279.0" layoutY="24.0" text="Meal Management System">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Label layoutX="110.0" layoutY="99.0" text="Create House">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
    </children>

</AnchorPane>
